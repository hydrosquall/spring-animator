{
  "name": "spring-animator",
  "version": "1.0.2",
  "description": "a little tool for animating scalar and vector values with spring forces",
  "main": "lib/umd.js",
  "module": "lib/index.js",
  "license": "MIT",
  "author": {
    "name": "Taylor Baldwin",
    "email": "taylorbaldwin@gmail.com",
    "url": "https://tbaldw.in/"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "rollup": "^0.41.6",
    "standard": "^10.0.1",
    "tape": "^4.6.3"
  },
  "scripts": {
    "bundle": "rollup --format=umd --name=SpringAnimator -- lib/index.js > lib/umd.js",
    "transpile": "babel src --out-dir=lib --modules=false",
    "build": "npm run transpile && npm run bundle",
    "test": "node test.js",
    "lint": "standard",
    "prepublish": "npm run build && npm run lint"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "animate",
    "animation",
    "spring",
    "physics"
  ],
  "standard": {
    "ignore": [
      "lib"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/rolyatmax/spring-animator.git"
  },
  "homepage": "https://github.com/rolyatmax/spring-animator",
  "bugs": {
    "url": "https://github.com/rolyatmax/spring-animator/issues"
  }
}
